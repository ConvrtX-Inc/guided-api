{
  "type": "postgres",
  "port": 5432,
  "synchronize": false,
  "dropSchema": false,
  "keepConnectionAlive": true,
  "logging": true,
  "entities": [
    "./**/*.entity{.ts,.js}"
  ],
  "migrations": [
    "./dist/database/migrations/**/*{.ts,.js}"
  ],
  "seeds": [
    "./dist/database/seeds/**/*{.ts,.js}"
  ],
  "factories": [
    "./dist/database/factories/**/*{.ts,.js}"
  ],
  "cli": {
    "entitiesDir": "src",
    "migrationsDir": "src/database/migrations",
    "subscribersDir": "subscriber"
  },
  "extra": {
    "max": 100
  }
}
